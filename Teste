    public void TransferenciaConta(ContaBancaria saldoOrigem, ContaBancaria saldoDestino, double valor) {

        double conta1Saldo, conta2Saldo, tranferencia;

        conta1Saldo = saldoOrigem.getSaldo();

        conta1Saldo -= valor;

        conta2Saldo = saldoDestino.getSaldo();

        saldoOrigem.setSaldo(conta1Saldo);        
        
    }

